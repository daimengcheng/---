<!--components/song-menu-item/index.wxml-->
<wxs src="/utils/format.wxs" module="format"></wxs>
<view class="item">
  <view class="top">
    <image class="image" mode="widthFix" src="{{itemInfo.coverImgUrl}}"></image>
    <view class="play-counter">
      <text class="counter">{{format.playConutFormat(itemInfo.playCount)}}</text>  
    </view>
  </view>
  <view class="bottom">
    {{itemInfo.name}}
  </view>
</view>
