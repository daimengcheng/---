/* components/rank-item/index.wxss */
.item{
  height: 250rpx;
  background-color: #f0eef0;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  margin-bottom: 25rpx;
}
.left{
  font-size: 28rpx;
  margin:30rpx 0 0 30rpx;
  width: 50%;
}

.item .left .title{
  font-size: 40rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
  font-family: "黑体";
}
.left .song-item {
  margin-top: 15rpx;
  display: flex;
  justify-content:flex-start;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.song-item .name{
  
}

.song-item .art-name{
  color: #bcbdbc;
}
.right{
  display: flex;
}
.right{
  position: relative;
  color: white;
}
.right .image{
  width:250rpx;
  border-radius: 20rpx;
} 
.right .play-counter{
  font-size: 24rpx;
  position: absolute;
  bottom: 15rpx;
  right: 20rpx;
  width: 100rpx;
  height: 40rpx;
  line-height: 40rpx;
  background-color: rgba(0,0,0,.3);
  text-align: center;
  border-radius: 30rpx;
}