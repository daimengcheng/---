/* pages/player/index.wxss */
.player-container{
  width: 100%;
  height: 100vh;
}

.cover{
  position: relative;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.mark{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.5);
  backdrop-filter: blur(40rpx);
}

.cover .image{
  height: 100%;
}