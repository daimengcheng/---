/* pages/player/index.wxss */
page{
  padding:0 20rpx;
}
.player-container{
  width: 100%;
  height: 100vh;
}

/* 封面背景 */
.cover{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.mark{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.5);
  backdrop-filter: blur(40rpx);
}
.cover .image{
  height: 100%;
}

/* 歌曲信息 */
.info{
  margin: 250rpx auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* align-items: center; */
}
.info .album{
  width: 100%;
  display: flex;
  justify-content: center;
}
.album .image{
  /* width: 80%; */
}

.desc{
  margin-top: 30rpx;
}
.desc .song-name{
  font-size: 38rpx;
  margin-bottom: 10rpx;
}

.lyric{
  display: flex;
  justify-content: center;
  margin-bottom: 80rpx;
  color: white;
}
.time{
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}


