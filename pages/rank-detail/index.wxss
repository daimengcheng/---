/* pages/rank-detail/index.wxss */
page{
  padding: 0 20rpx;
}
.info-item-container{
  height: 100%;
}
.info-item{
  width: 100%;
  height: 100%;
  position: relative;
  left: -20rpx;
  padding: 30rpx;
  padding-top: 50rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  color: white;
  font-family: "微软雅黑";
  font-weight: 600;
}
.info-item .bg-image{
  position: absolute;
  left: 0rpx;
  top: 0;
  z-index: -1;
  width: 125%;
  height: 100%;
  backdrop-filter: blur(50rpx);
  background-size: cover;
}
.top{
  display: flex;
}

.left{
  margin: 0 30rpx 0 20rpx;
}
.left .image{
  width: 240rpx;
  border-radius: 30rpx;
}

.right{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 60%;
}
.right .tags{
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  -webkit-line-clamp: 1;
}
.right .tags .tag-item{
  margin-right: 10rpx;
}
.right .info {
  display: flex;
  align-items: center;
}
.right .info .avatar{
  width: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.right .desc{
  height: 15%;
  width: 100%;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.bottom{
  display: flex;
  justify-content: space-around;
  margin-top: 50rpx;
  align-items: center;
}
.bottom .favo,.share{
  display: flex;
  align-items: center;
}
.bottom image{
  width: 50rpx;
  margin-right: 10rpx;
}